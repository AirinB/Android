<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="#D6EDFF"

    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/empty" />


    <Switch
        android:id="@+id/toggleBtn"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:checked="false"
        android:switchTextAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="@string/mark_bombs"
        android:textColor="@color/shrine_pink_900"
        android:textColorHighlight="@color/shrine_pink_900"
        android:textOff="@string/flag_off"
        android:textOn="@string/flag_on"
        android:textStyle="bold"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">



        <com.example.minesweeper.ui.mapView
            android:id="@+id/mapView"
            android:layout_width="350dp"
            android:layout_height="350dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnRestart"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:soundEffectsEnabled="true"
        android:text="@string/restart"
        android:background="@color/shrine_pink_50"
        android:textColor="@color/shrine_pink_900"
        android:padding="@dimen/cardview_default_elevation"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="20dp"
        tools:ignore="PrivateResource" />

</LinearLayout>